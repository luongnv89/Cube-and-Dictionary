/**
 * 
 */
package mai.JUnit_Test;

import static org.junit.Assert.assertEquals;
import static org.junit.Assert.assertFalse;
import static org.junit.Assert.assertTrue;
import mai.process.ShareMemory;

import org.junit.After;
import org.junit.Before;
import org.junit.Test;

public class ShareMemory_JUnitTest extends CubeAndDic_TestSpec{

	private ShareMemory shareMemo;

	/**
	 * @throws java.lang.Exception
	 */
	@Before
	public void setUp() throws Exception {
		shareMemo.setup(validCube, associatedDic);
	}

	/**
	 * @throws java.lang.Exception
	 */
	@After
	public void tearDown() throws Exception {
		shareMemo = null;
	}

	
	/**
	 * Test method for {@link mai.process.ShareMemory#isAssociatedDic()}.
	 */
	@Test
	public void testIsAssociatedDic() {
		assertTrue(shareMemo.isAssociatedDic());
	}

	/**
	 * Test method for {@link mai.process.ShareMemory#setAssociatedDic(boolean)}.
	 */
	@Test
	public void testSetAssociatedDic() {
		shareMemo.setAssociatedDic(false);
		assertFalse(shareMemo.isAssociatedDic());
	}

	/**
	 * Test method for {@link mai.process.ShareMemory#getListWords()}.
	 */
	@Test
	public void testGetListWords() {
		assertEquals(associatedDic.getDicSize(), shareMemo.getListWords().size());
	}


	/**
	 * Test method for {@link mai.process.ShareMemory#getCube()}.
	 */
	@Test
	public void testGetCube() {
		assertEquals(200, shareMemo.getCube().getSize());
	}

	/**
	 * Test method for {@link mai.process.ShareMemory#getDic()}.
	 */
	@Test
	public void testGetDic() {
		assertEquals(5,  shareMemo.getDic().getWordLength());
		assertEquals(22, shareMemo.getDic().getDicSize());
	}


}
